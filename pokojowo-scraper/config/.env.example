# Anthropic API
ANTHROPIC_API_KEY=sk-ant-...

# Pokojowo API
POKOJOWO_API_URL=http://localhost:3000
POKOJOWO_EMAIL=scraper@pokojowo.com
POKOJOWO_PASSWORD=your_secure_password

# Scraper MongoDB (separate from Pokojowo's MongoDB)
SCRAPER_MONGODB_URL=mongodb://localhost:27017
SCRAPER_DATABASE_NAME=pokojowo_scraper

# Rate Limiting (requests per minute per site)
RATE_LIMIT_OLX=30
RATE_LIMIT_OTODOM=20
RATE_LIMIT_GUMTREE=25

# Proxy Configuration (optional)
USE_PROXIES=false
PROXY_FILE=config/proxies.txt

# Logging
LOG_LEVEL=INFO

# Scheduling (cron expression for daily runs)
SCHEDULE_ENABLED=false
SCHEDULE_CRON=0 6 * * *
